{
  "name": "readMe",
  "version": "1.0",
  "description": "Chrome extension for creating a reading list based on bookmarks",
  "permissions": ["declarativeContent", "storage", "tabs", "bookmarks"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
